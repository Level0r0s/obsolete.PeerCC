<Page
    x:Class="PeerConnectionClient.ExtendedSplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PeerConnectionClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#464646">

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <Canvas Grid.Row="0">
            <Image x:Name="extendedSplashImage"
                   Source="Assets/SplashScreen.scale-100.png"
                   ImageOpened="extendedSplashImage_ImageOpened"/>
        </Canvas>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            
            <ProgressBar Height="20"
						 Width="300"
						 IsIndeterminate="True"/>
        </StackPanel>
    </Grid>
</Page>
