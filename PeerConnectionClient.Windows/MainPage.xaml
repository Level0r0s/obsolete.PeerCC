<Page
    x:Class="PeerConnectionClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PeerConnectionClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0"
                    Orientation="Vertical">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right" >
                <TextBlock Text="IP"
                           VerticalAlignment="Center"
                           Margin="5"/>
                <TextBox Text="{Binding Ip, Mode=TwoWay}"
                         VerticalAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Width="120"
                         Margin="5" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right" >
                <TextBlock Text="Port"
                           VerticalAlignment="Center"
                           Margin="5"/>
                <TextBox Text="{Binding Port, Mode=TwoWay}"
                         VerticalAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Width="120"
                         Margin="5" />
            </StackPanel>
            <Button Content="Connect" 
                    Margin="5"
                    Command="{Binding ConnectCommand}"
                    HorizontalAlignment="Right"/>
            <ToggleSwitch Header="Microphone"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          IsOn="{Binding MicrophoneIsOn, Mode=TwoWay}"/>
            <ToggleSwitch Header="Camera" 
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          IsOn="{Binding CameraEnabled, Mode=TwoWay}"/>
            <Button Content="Debug settings"
                    HorizontalAlignment="Right">
                <Button.Flyout>
                    <Flyout>
                        <StackPanel>
                            <ToggleSwitch Header="Tracing"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Top"
                                          IsOn="{Binding TracingEnabled, Mode=TwoWay}"/>
                            <TextBox Header="Trace server IP"
                                     Margin="10,0,0,0"
                                     TextWrapping="Wrap"
                                     HorizontalAlignment="Right"
                                     PlaceholderText="IPv4"
                                     Text="{Binding TraceServerIp, Mode=TwoWay}"
                                     Width="155"/>
                            <TextBox Header="Trace server port"
                                     Margin="10,0,0,0"
                                     TextWrapping="Wrap"
                                     Text="{Binding TraceServerPort, Mode=TwoWay}"
                                     HorizontalAlignment="Right"
                                     PlaceholderText="Port"
                                     Width="155"/>
                            <CheckBox HorizontalAlignment="Left" 
                                     Margin="7,0,0,0" 
                                     Content="Autosend traces" 
                                     IsChecked="{Binding TracesAutoSendEnabled, Mode=TwoWay}"/>
                            <Button Content="Send traces"
                                    HorizontalAlignment="Center"
                                    Command="{Binding SendTracesCommand}"/>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>

            <TextBlock Text="Connected Peers"
                       Margin="5"/>
            <ListBox Height="146"
                     Width="200" 
                     Margin="5" 
                     ItemsSource="{Binding Peers}"
                     SelectedItem="{Binding SelectedPeer, Mode=TwoWay}"/>
            <Button Content="Connect To Selected Peer"
                    HorizontalAlignment="Center"
                    Command="{Binding ConnectToPeerCommand}"/>
            <ListBox Height="50" Width="200" Margin="5"
                     ItemsSource="{Binding Cameras}"
                     SelectedItem="{Binding SelectedCamera, Mode=TwoWay}">
              <ListBox.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
              </ListBox.ItemTemplate>
            </ListBox>
            <Border BorderThickness="1" Margin="5" BorderBrush="Blue" >
                    <MediaElement Width="200"
                                  Height="200" 
                                  RealTimePlayback="True"
                                  Name="SelfVideo"/>
            </Border> 

    </StackPanel>
        <Border BorderThickness="1"
                BorderBrush="Blue"
                Margin="5" 
                Grid.Column="1" >
            <MediaElement Name="PeerVideo" RealTimePlayback="True" />
        </Border>
    </Grid>
</Page>
